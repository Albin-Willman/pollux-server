<% content_for :content do %>

<div class="page-header">
  <h1>Food blog <small>Tell me about your latest meal</small></h1>
</div>


<div class="row">
  <div class="col-md-5">
    <form>
      <div class="form-group">
        <label>Describe your meal</label>
        <textarea class="form-control" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label>Image of the meal</label>
        <div class="thumbnail">
          <canvas style="display: none;" id="captured-image-canvas"></canvas>
          <img src="" id="caputred-image">
          <div class="caption">
            <h3>Photo of your meal</h3>
            <p>Send a photo of your meal</p>
            <p>
              <a href="#" class="btn btn-default" role="button" id="take-picture">Take photo</a>
            </p>
            <p>
              <a href="#" class="btn btn-default" role="button" id="upload-image">Upload photo</a>
            </p>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div id="location-div">
          <label>Add your location</label>
          <button class="btn btn-default" type="button" id="add-location">Add location</button>
        </div>
        <p class="lead" style="display: none" id="latitude-location"></p>
        <p class="lead" style="display: none" id="longitude-location"></p>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

  <div class="col-md-7">
   <!--  <p>
      <a href="#" id="capture-webcam" class="btn btn-default">Show video</a>
    </p>
    <h3>Video</h3> -->
    <div class="video-area">
      <video id="captured-video"></video>
    </div>
  </div>
</div>

<% end %>
